{
  "name": "billing-app",
  "version": "0.0.0",
  "main": "dist-electron/electron/main.js",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --base-href ./",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:billing-app": "node dist/billing-app/server/server.mjs",
    "electron:serve": "npm run build && npm run build:electron && electron .",
    "electron:dev": "concurrently \"ng serve\" \"npm run electron:watch\"",
    "electron:watch": "tsc -p electron/tsconfig.json --watch",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:prod": "ng build --configuration production && npm run build:electron",
    "package:win": "npm run build:prod && electron-builder build --win",
    "package:mac": "npm run build:prod && electron-builder build --mac",
    "package:linux": "npm run build:prod && electron-builder build --linux"
  },
  "dependencies": {
    "@angular/animations": "^19.2.0",
    "@angular/cdk": "^19.2.19",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/material": "^19.2.19",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/platform-server": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@angular/ssr": "^19.2.20",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "express": "^4.18.2",
    "material-icons": "^1.13.14",
    "pdfmake": "^0.2.10",
    "rxjs": "~7.8.0",
    "tslib": "^2.6.2",
    "uuid": "^9.0.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.20",
    "@angular/cli": "^19.2.20",
    "@angular/compiler-cli": "^19.2.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.11.19",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.2.2",
    "electron": "^29.0.1",
    "electron-builder": "^24.13.3",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.7.2"
  },
  "build": {
    "appId": "com.tourbilling.app",
    "productName": "Tour Billing",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/icon.png"
    }
  }
}
